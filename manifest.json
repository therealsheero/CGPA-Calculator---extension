{
  "manifest_version": 3,
  "name": "CGPA Calculator",
  "version": "1.0",
  "description": "This Chrome extension helps you compute your CGPA semester-by-semester using subject-wise credits and grades. Based on 10-point CGPA.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "calc2.png",
      "48": "calc2.png",
      "128": "calc2.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "calc2.png",
    "48": "calc2.png",
    "128": "calc2.png"
  },
  "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self';"
},

  "permissions": ["windows"],
  "host_permissions": []
}

